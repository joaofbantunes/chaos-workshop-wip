{
  "ReverseProxy": {
    "Routes": {
      "OrderAllRoutes": {
        "ClusterId": "OrderService",
        "Match": {
          "Path": "order/{**rest}"
        },
        "Transforms": [
          {
            "PathPattern": "/{**rest}"
          },
          {
            "BeforeRequestFailurePercent": "15",
            "AfterResponseFailurePercent": "30",
            "BeforeRequestMaxLatency": "00:00:01",
            "AfterResponseMaxLatency": "00:00:01"
          }
        ]
      },
      "LoyaltyAllRoutes": {
        "ClusterId": "LoyaltyService",
        "Match": {
          "Path": "loyalty/{**rest}"
        },
        "Transforms": [
          {
            "PathPattern": "/{**rest}"
          },
          {
            "BeforeRequestFailurePercent": "25",
            "AfterResponseFailurePercent": "25",
            "BeforeRequestMaxLatency": "00:00:01",
            "AfterResponseMaxLatency": "00:00:01"
          }
        ]
      },
      "MenuAllRoutes": {
        "ClusterId": "MenuService",
        "Match": {
          "Path": "menu/{**rest}"
        },
        "Transforms": [
          {
            "PathPattern": "/{**rest}"
          },
          {
            "BeforeRequestFailurePercent": "15",
            "AfterResponseFailurePercent": "15",
            "BeforeRequestMaxLatency": "00:00:01",
            "AfterResponseMaxLatency": "00:00:01"
          }
        ]
      }
    },
    "Clusters": {
      "OrderService": {
        "Destinations": {
          "whatever": {
            "Address": "http://order-service:8080"
          }
        }
      },
      "LoyaltyService": {
        "Destinations": {
          "whatever": {
            "Address": "http://loyalty-service:8080"
          }
        }
      },
      "MenuService": {
        "Destinations": {
          "whatever": {
            "Address": "http://menu-service:8080"
          }
        }
      }
    }
  }
}
